class Libro {
    String nombre;
    String autor;
    String genero;
    String codigo;

    public Libro(String nombre, String autor, String genero, String codigo) {
        this.nombre = nombre;
        this.autor = autor;
        this.genero = genero;
        this.codigo = codigo;
    }
}

